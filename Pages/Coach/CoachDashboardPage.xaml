<Page x:Class="FitAdmin.Pages.Coach.CoachDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoachDashboardPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/background2.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <Border Grid.Column="0"
                Background="white"
                BorderBrush="#3e3e3e"
                CornerRadius="0 20 20 0"
                BorderThickness="0,0,0.5,0">
            <StackPanel>
                <TextBlock Foreground="#711fde"
                           FontSize="30"
                           TextAlignment="Center"
                           FontWeight="Bold"
                           Text="FitAdmin" />
                <Button Content="Расписание Тренировок"
                        HorizontalContentAlignment="Left"
                        Height="40"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="#3e3e3e"
                        Tag="CoachTrainingSchedulePage"
                        Click="NavigateButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarMonth"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#3e3e3e"
                                                         Margin="0,0,10,0" />
                                <TextBlock Text="Расп.Тренировок"
                                           Foreground="#3e3e3e" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Выйти"
                        HorizontalContentAlignment="Left"
                        Height="40"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="#3e3e3e"
                        Tag="Exit"
                        Click="NavigateButton_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ExitToApp"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#3e3e3e"
                                                         Margin="0,0,10,0" />
                                <TextBlock Text="Выйти"
                                           Foreground="#3e3e3e" />
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>

        </Border>

        <Frame Grid.Column="1"
               x:Name="DashboardFrame"
               Padding="15"
               NavigationUIVisibility="Hidden" />


    </Grid>
</Page>
