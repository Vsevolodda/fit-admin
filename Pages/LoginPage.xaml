<Page x:Class="FitAdmin.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="LoginPage">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/background.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <Border Background="White"
                CornerRadius="20"
                Padding="20"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Width="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Foreground="#711fde"
                               FontSize="50"
                               TextAlignment="Center"
                               FontWeight="Bold">
            FitAdmin
                    </TextBlock>
                    <TextBlock Width="400"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontWeight="Bold"
                               Foreground="#333333"
                               FontSize="25"
                               LineHeight="1">
            Cистема учета клиентов в фитнес-центре
                    </TextBlock>
                </StackPanel>

                <StackPanel Width="300"
                            Margin="0 30 0 0">
                    <TextBox x:Name="UsernameTextBox"
                             Padding="10 0"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Имя пользователя"
                             Height="35"
                             Margin="0 0 0 10" />

                    <PasswordBox Name="PasswordBox"
                                 Padding="10 0"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 Height="35"
                                 Margin="0 0 0 10" />

                    <Button Content="Войти"
                            Height="30"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="LoginButton_Click" />
                    <TextBlock x:Name="ErrorMessageTextBlock"
                               Foreground="Red"
                               Height="30"
                               TextAlignment="Center"
                               Margin="0,10,0,10" />

                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
