<Page x:Class="FitAdmin.Pages.Admin.AdminAdminsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FitAdmin.Pages.Admin"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AdminAdminsPage">

    <Grid>
        <Border Background="White"
                Padding="10"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel  Grid.Row="0">
                    <!-- Заголовок -->
                    <TextBlock Text="Администраторы"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,10" />

                    <!-- Кнопки управления -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <Button Content="Добавить"
                                Width="100"
                                Click="AddAdmin_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,10,0" />
                        <Button Content="Редактировать"
                                Click="EditAdmin_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,10,0" />
                        <Button Content="Удалить"
                                Width="100"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="DeleteAdmin_Click" />
                    </StackPanel>
                </StackPanel>

                <DataGrid Grid.Row="1"
                    x:Name="AdminsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Background="white"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding UserId}"
                                            IsReadOnly="True"
                                            Width="50" />
                        <DataGridTextColumn Header="Логин"
                                            Binding="{Binding Login}"
                                            Width="150" />
                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="200" />
                        <DataGridTextColumn Header="ФИО"
                                            Binding="{Binding FullName}"
                                            Width="200" />
                        <DataGridCheckBoxColumn Header="Активен"
                                                Binding="{Binding IsActive}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid >
        </Border>
    </Grid>
</Page>
