<Page x:Class="FitAdmin.Pages.Admin.AdminAddEditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FitAdmin.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminAddEditClientPage">
    <Grid>
        <Border Background="White"
                Padding="20"
                CornerRadius="10"
                Margin="20">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock x:Name="TitleTextBlock"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <!-- Форма -->
                <TextBox x:Name="FullNameTextBox"
                         materialDesign:HintAssist.Hint="ФИО"
                         Padding="10 0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Height="35"
                         Margin="0,0,0,10" />
                <DatePicker x:Name="DateOfBirthPicker"
                            materialDesign:HintAssist.Hint="Дата рождения"
                            Padding="10"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,0,10" />
                <TextBox x:Name="PhoneTextBox"
                         materialDesign:HintAssist.Hint="Телефон"
                         Padding="10 0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Height="35"
                         Margin="0,0,0,10" />
                <TextBox x:Name="EmailTextBox"
                         materialDesign:HintAssist.Hint="Email"
                         Padding="10 0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Height="35"
                         Margin="0,0,0,10" />
                <TextBox x:Name="AddressTextBox"
                         materialDesign:HintAssist.Hint="Адрес"
                         Padding="10 0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Height="35"
                         Margin="0,0,0,10" />
                <TextBox x:Name="MedicalNotesTextBox"
                         materialDesign:HintAssist.Hint="Медицинские противопоказания"
                         Padding="10 0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Height="35"
                         Margin="0,0,0,10" />
                <CheckBox x:Name="IsActiveCheckBox"
                          Content="Активен"
                          IsChecked="True"
                          Margin="0,0,0,10" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Сохранить"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="SaveButton_Click"
                            Margin="0,0,10,0" />
                    <Button Content="Отмена"
                            Width="100"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CancelButton_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
